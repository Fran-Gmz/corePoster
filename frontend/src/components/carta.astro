---
interface Props{
    title:string;
    text:string;
    img:string
}

const { title , text , img } = Astro.props
---

<div class="grid grid-cols-2 xl:grid-cols-1 bg-white p-5 gap-5 duration-500 hover:shadow-2xl shadow-black hover:cursor-pointer">
    <div class="flex justify-center items-center">
        <img src={img} alt="img">
    </div>
    <h3 class="flex justify-center items-center text text-center text-2xl font-semibold italic">{title}</h3>
    <p class="col-span-2 xl:col-span-1 text text-center  text-sm pl-2 pr-2  mb-5">{text}</p>
</div>